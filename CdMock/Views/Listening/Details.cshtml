@using System.IO
@model CdMock.Models.Listening.ListeningAudio

@{
    ViewData["Title"] = "Listening Audio Tafsilotlari";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="bi bi-file-earmark-music me-2"></i>Listening Audio Tafsilotlari
        </h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i>Orqaga
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-3">ID:</dt>
                        <dd class="col-sm-9">#@Model.AudioId</dd>

                        <dt class="col-sm-3">Sarlavha:</dt>
                        <dd class="col-sm-9">
                            <h4>@Model.Title</h4>
                        </dd>

                        @if (!string.IsNullOrEmpty(Model.Description))
                        {
                            <dt class="col-sm-3">Tavsif:</dt>
                            <dd class="col-sm-9">@Model.Description</dd>
                        }

                        <dt class="col-sm-3">Mock Exam:</dt>
                        <dd class="col-sm-9">
                            @if (Model.Mocks != null)
                            {
                                <span class="badge bg-info fs-6">
                                    <i class="bi bi-journal-text me-1"></i>@Model.Mocks.Name
                                </span>
                            }
                        </dd>

                        <dt class="col-sm-3">Fayl Nomi:</dt>
                        <dd class="col-sm-9">
                            <i class="bi bi-file-earmark-music text-primary me-1"></i>
                            @Model.FileName
                        </dd>

                        <dt class="col-sm-3">Fayl Hajmi:</dt>
                        <dd class="col-sm-9">
                            <strong>@((Model.FileSize / 1024.0 / 1024.0).ToString("F2")) MB</strong>
                            <small class="text-muted">(@Model.FileSize.ToString("N0") bytes)</small>
                        </dd>

                        @if (Model.Duration.HasValue)
                        {
                            <dt class="col-sm-3">Davomiyligi:</dt>
                            <dd class="col-sm-9">
                                @TimeSpan.FromSeconds(Model.Duration.Value).ToString(@"mm\:ss") daqiqa
                            </dd>
                        }

                        <dt class="col-sm-3">Yuklangan Vaqt:</dt>
                        <dd class="col-sm-9">@Model.UploadedAt.ToString("dd.MM.yyyy HH:mm")</dd>
                    </dl>

                    <hr />

                    <div class="mb-4">
                        <h5 class="mb-3">
                            <i class="bi bi-play-circle me-2"></i>Audio Tinglash
                        </h5>
                        <audio controls class="w-100" style="max-width: 600px;">
                            <source src="@Model.AudioFilePath" type="audio/mpeg">
                            Brauzeringiz audio pleyerni qo'llab-quvvatlamaydi.
                        </audio>
                    </div>

                    <hr />

                    <div class="d-flex gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.AudioId" class="btn btn-warning">
                            <i class="bi bi-pencil me-1"></i>Tahrirlash
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.AudioId" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>O'chirish
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-list me-1"></i>Ro'yxatga qaytish
                        </a>
                        <a href="@Model.AudioFilePath" download="@Model.FileName" class="btn btn-success">
                            <i class="bi bi-download me-1"></i>Yuklab olish
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle me-2"></i>Texnik Ma'lumotlar
                    </h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
    <i class="bi bi-file-earmark text-primary me-2"></i>
    <strong>Format:</strong> @Model.FileName.Substring(Model.FileName.LastIndexOf('.')).ToUpper()
</li>
                        <li class="mb-2">
                            <i class="bi bi-hdd text-success me-2"></i>
                            <strong>Hajm:</strong> @((Model.FileSize / 1024.0 / 1024.0).ToString("F2")) MB
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-calendar text-info me-2"></i>
                            <strong>Yuklangan:</strong> @Model.UploadedAt.ToString("dd.MM.yyyy")
                        </li>
                        <li class="mb-2">
                            <i class="bi bi-link-45deg text-warning me-2"></i>
                            <strong>Fayl yo'li:</strong>
                            <br />
                            <small class="text-muted">@Model.AudioFilePath</small>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
@using System.IO
@model IEnumerable<CdMock.Models.Writing.WritingTask>

@{
    ViewData["Title"] = "Writing Tasks";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="bi bi-pencil-square me-2"></i>Writing Tasks
        </h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>Yangi Task Qo'shish
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="px-4">ID</th>
                                <th>Sarlavha</th>
                                <th>Task Turi</th>
                                <th>Rasmlar</th>
                                <th>Mock Exam</th>
                                <th>Yaratilgan</th>
                                <th class="text-center">Amallar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="px-4 fw-bold">#@item.TaskId</td>
                                    <td>
                                        <strong>@item.Title</strong>
                                    </td>
                                    <td>
                                        @if (item.TaskType == CdMock.Models.Writing.TaskType.Task1)
                                        {
                                            <span class="badge bg-primary">Task 1</span>
                                        }
                                        else if (item.TaskType == CdMock.Models.Writing.TaskType.Task2)
                                        {
                                            <span class="badge bg-success">Task 2</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">Ikkala Task</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(item.Task1ImagePath))
                                        {
                                            <span class="badge bg-light text-dark me-1">
                                                <i class="bi bi-image text-primary"></i> Task 1
                                            </span>
                                        }
                                        @if (!string.IsNullOrEmpty(item.Task2ImagePath))
                                        {
                                            <span class="badge bg-light text-dark">
                                                <i class="bi bi-image text-success"></i> Task 2
                                            </span>
                                        }
                                        @if (string.IsNullOrEmpty(item.Task1ImagePath) && string.IsNullOrEmpty(item.Task2ImagePath))
                                        {
                                            <span class="text-muted">Rasm yo'q</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Mocks != null)
                                        {
                                            <span class="badge bg-info">
                                                <i class="bi bi-journal-text me-1"></i>@item.Mocks.Name
                                            </span>
                                        }
                                    </td>
                                    <td>@item.CreatedAt.ToString("dd.MM.yyyy")</td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@item.TaskId"
                                               class="btn btn-info" title="Ko'rish">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.TaskId"
                                               class="btn btn-warning" title="Tahrirlash">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.TaskId"
                                               class="btn btn-danger" title="O'chirish">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-pencil-square display-1 text-muted"></i>
                <p class="text-muted mt-3 mb-4">Hozircha writing task yo'q</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i>Birinchi Taskni Yaratish
                </a>
            </div>
        </div>
    }
</div>
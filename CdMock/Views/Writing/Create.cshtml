@using System.IO
@model CdMock.Models.Writing.WritingTask

@{
    ViewData["Title"] = "Yangi Writing Task";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="bi bi-plus-circle me-2"></i>Yangi Writing Task Yaratish
        </h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i>Orqaga
        </a>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <h5>Xatolar:</h5>
            <ul>
                @foreach (var modelState in ViewData.ModelState.Values)
                {
                    foreach (var error in modelState.Errors)
                    {
                        <li>@error.ErrorMessage</li>
                    }
                }
            </ul>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Title" class="form-label"></label>
                        <input asp-for="Title" class="form-control" placeholder="Task sarlavhasi" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="col-md-3 mb-3">
                        <label asp-for="TaskType" class="form-label"></label>
                        <select asp-for="TaskType" class="form-select" asp-items="Html.GetEnumSelectList<CdMock.Models.Writing.TaskType>()">
                            <option value="">-- Task turini tanlang --</option>
                        </select>
                        <span asp-validation-for="TaskType" class="text-danger"></span>
                    </div>

                    <div class="col-md-3 mb-3">
                        <label asp-for="MockId" class="form-label">Mock Exam</label>
                        <select asp-for="MockId" class="form-select" asp-items="ViewBag.Mocks">
                            <option value="">-- Mock tanlang --</option>
                        </select>
                        <span asp-validation-for="MockId" class="text-danger"></span>
                    </div>
                </div>

                <hr class="my-4" />

                <!-- TASK 1 Section -->
                <div class="card bg-light mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-1-circle me-2"></i>Task 1
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Task1Instructions" class="form-label"></label>
                                <textarea asp-for="Task1Instructions" class="form-control" rows="3"
                                          placeholder="Task 1 ko'rsatmalari (ixtiyoriy)"></textarea>
                                <span asp-validation-for="Task1Instructions" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Task1Description" class="form-label"></label>
                                <textarea asp-for="Task1Description" class="form-control" rows="3"
                                          placeholder="Task 1 tavsifi (ixtiyoriy)"></textarea>
                                <span asp-validation-for="Task1Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="task1Image" class="form-label">Task 1 Rasm</label>
                            <input type="file" class="form-control" id="task1Image" name="task1Image"
                                   accept=".jpg,.jpeg,.png,.gif,.webp" />
                            <div class="form-text">
                                Qabul qilinadigan formatlar: JPG, PNG, GIF, WEBP. Maksimal: 5MB
                            </div>
                            <div id="task1Preview" class="mt-2"></div>
                        </div>
                    </div>
                </div>

                <!-- TASK 2 Section -->
                <div class="card bg-light mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="bi bi-2-circle me-2"></i>Task 2
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Task2Instructions" class="form-label"></label>
                                <textarea asp-for="Task2Instructions" class="form-control" rows="3"
                                          placeholder="Task 2 ko'rsatmalari (ixtiyoriy)"></textarea>
                                <span asp-validation-for="Task2Instructions" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Task2Description" class="form-label"></label>
                                <textarea asp-for="Task2Description" class="form-control" rows="3"
                                          placeholder="Task 2 tavsifi (ixtiyoriy)"></textarea>
                                <span asp-validation-for="Task2Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="task2Image" class="form-label">Task 2 Rasm</label>
                            <input type="file" class="form-control" id="task2Image" name="task2Image"
                                   accept=".jpg,.jpeg,.png,.gif,.webp" />
                            <div class="form-text">
                                Qabul qilinadigan formatlar: JPG, PNG, GIF, WEBP. Maksimal: 5MB
                            </div>
                            <div id="task2Preview" class="mt-2"></div>
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="TimeLimit" class="form-label"></label>
                    <input asp-for="TimeLimit" type="number" class="form-control"
                           placeholder="Vaqt cheklovi daqiqalarda (ixtiyoriy)" />
                    <span asp-validation-for="TimeLimit" class="text-danger"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save me-1"></i>Saqlash
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">Bekor qilish</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Task 1 rasm preview
        document.getElementById('task1Image').addEventListener('change', function(e) {
            const file = e.target.files[0];
            const preview = document.getElementById('task1Preview');
            
            if (file) {
                const maxSize = 5 * 1024 * 1024; // 5MB
                if (file.size > maxSize) {
                    alert('Rasm hajmi 5MB dan oshmasligi kerak!');
                    e.target.value = '';
                    preview.innerHTML = '';
                    return;
                }
                
                const reader = new FileReader();
                reader.onload = function(event) {
                    preview.innerHTML = `<img src="${event.target.result}" class="img-thumbnail" style="max-width: 300px; max-height: 200px;">`;
                };
                reader.readAsDataURL(file);
            } else {
                preview.innerHTML = '';
            }
        });

        // Task 2 rasm preview
        document.getElementById('task2Image').addEventListener('change', function(e) {
            const file = e.target.files[0];
            const preview = document.getElementById('task2Preview');
            
            if (file) {
                const maxSize = 5 * 1024 * 1024; // 5MB
                if (file.size > maxSize) {
                    alert('Rasm hajmi 5MB dan oshmasligi kerak!');
                    e.target.value = '';
                    preview.innerHTML = '';
                    return;
                }
                
                const reader = new FileReader();
                reader.onload = function(event) {
                    preview.innerHTML = `<img src="${event.target.result}" class="img-thumbnail" style="max-width: 300px; max-height: 200px;">`;
                };
                reader.readAsDataURL(file);
            } else {
                preview.innerHTML = '';
            }
        });
    </script>
}
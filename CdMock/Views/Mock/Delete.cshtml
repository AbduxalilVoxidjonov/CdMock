@model CdMock.Models.Mocks
@{
    ViewData["Title"] = "Ma'lumotni O'chirish";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3 border-danger">
                <div class="card-header bg-danger text-white text-center py-3">
                    <h4 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Ma'lumotni O'chirish</h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning" role="alert">
                        <i class="bi bi-exclamation-circle me-2"></i>
                        <strong>Diqqat!</strong> Ushbu ma'lumotni o'chirishni tasdiqlaysizmi?
                    </div>

                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Name):</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Description):</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.CreatedAt):</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.IsActive):</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Aktiv</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Nofaol</span>
                            }
                        </dd>
                    </dl>

                    <hr class="my-4">

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash me-1"></i>Ha, O'chirish
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i>Yo'q, Bekor qilish
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
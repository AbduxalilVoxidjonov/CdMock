@model CdMock.Models.Mocks
@{
    ViewData["Title"] = "Tafsilotlar";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-info text-white text-center py-3">
                    <h4 class="mb-0"><i class="bi bi-info-circle me-2"></i>Ma'lumot Tafsilotlari</h4>
                </div>
                <div class="card-body p-4">
                    <dl class="row">
                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Name):</dt>
                        <dd class="col-sm-8">@Model.Name</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.Description):</dt>
                        <dd class="col-sm-8">@Model.Description</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.CreatedAt):</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>

                        <dt class="col-sm-4 fw-bold">@Html.DisplayNameFor(model => model.IsActive):</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success fs-6">
                                    <i class="bi bi-check-circle me-1"></i>Aktiv
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-secondary fs-6">
                                    <i class="bi bi-x-circle me-1"></i>Nofaol
                                </span>
                            }
                        </dd>
                    </dl>

                    <hr class="my-4">

                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg">
                            <i class="bi bi-pencil me-1"></i>Tahrirlash
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-1"></i>Orqaga qaytish
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
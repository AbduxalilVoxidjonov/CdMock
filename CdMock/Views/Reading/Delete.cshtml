@model CdMock.Models.Reading.ReadingText

@{
    ViewData["Title"] = "O'chirish";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0 text-danger">
            <i class="bi bi-exclamation-triangle me-2"></i>Reading Text O'chirish
        </h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i>Orqaga
        </a>
    </div>

    <div class="card shadow-sm border-danger">
        <div class="card-body">
            <div class="alert alert-danger">
                <i class="bi bi-exclamation-triangle me-2"></i>
                <strong>Ogohlantirish!</strong> Ushbu reading textni o'chirishni xohlaysizmi?
            </div>

            <dl class="row">
                <dt class="col-sm-2">ID:</dt>
                <dd class="col-sm-10">#@Model.TextId</dd>

                <dt class="col-sm-2">Title:</dt>
                <dd class="col-sm-10"><strong>@Model.Title</strong></dd>

                <dt class="col-sm-2">Mock Exam:</dt>
                <dd class="col-sm-10">
                    @if (Model.Mocks != null)
                    {
                        <span class="badge bg-info">@Model.Mocks.Name</span>
                    }
                </dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="TextId" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Ha, O'chirish
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">Yo'q, Bekor qilish</a>
                </div>
            </form>
        </div>
    </div>
</div>
@model CdMock.Models.Reading.ReadingText

@{
    ViewData["Title"] = "Reading Text Details";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="bi bi-file-text me-2"></i>Reading Text Tafsilotlari
        </h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i>Orqaga
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">ID:</dt>
                <dd class="col-sm-10">#@Model.TextId</dd>

                <dt class="col-sm-2">Title:</dt>
                <dd class="col-sm-10">
                    <h4>@Model.Title</h4>
                </dd>

                <dt class="col-sm-2">Mock Exam:</dt>
                <dd class="col-sm-10">
                    @if (Model.Mocks != null)
                    {
                        <span class="badge bg-info fs-6">@Model.Mocks.Name</span>
                    }
                </dd>

                <dt class="col-sm-2">Text:</dt>
                <dd class="col-sm-10">
                    <div class="border rounded p-3 bg-light">
                        @Model.Text
                    </div>
                </dd>
            </dl>

            <hr />

            <div class="d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.TextId" class="btn btn-warning">
                    <i class="bi bi-pencil me-1"></i>Tahrirlash
                </a>
                <a asp-action="Delete" asp-route-id="@Model.TextId" class="btn btn-danger">
                    <i class="bi bi-trash me-1"></i>O'chirish
                </a>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-list me-1"></i>Ro'yxatga qaytish
                </a>
            </div>
        </div>
    </div>
</div>
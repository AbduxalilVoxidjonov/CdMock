@model IEnumerable<CdMock.Models.Reading.ReadingText>

@{
    ViewData["Title"] = "Reading Texts";
}

<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">
            <i class="bi bi-book me-2"></i>Reading Texts
        </h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>Yangi Text Qo'shish
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="px-4">ID</th>
                                <th>Title</th>
                                <th>Text (Qisqa ko'rinish)</th>
                                <th>Mock Exam</th>
                                <th class="text-center">Amallar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="px-4 fw-bold">#@item.TextId</td>
                                    <td>
                                        <strong>@item.Title</strong>
                                    </td>
                                    <td>
                                        @if (item.Text.Length > 30)
                                        {
                                            <span>@item.Text.Substring(0, 30)...</span>
                                        }
                                        else
                                        {
                                            <span>@item.Text</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Mocks != null)
                                        {
                                            <span class="badge bg-info">
                                                <i class="bi bi-journal-text me-1"></i>@item.Mocks.Name
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Mock topilmadi</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@item.TextId" 
                                               class="btn btn-info" title="Ko'rish">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.TextId" 
                                               class="btn btn-warning" title="Tahrirlash">
                                                <i class="bi bi-pencil"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.TextId" 
                                               class="btn btn-danger" title="O'chirish">
                                                <i class="bi bi-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body text-center py-5">
                <i class="bi bi-inbox display-1 text-muted"></i>
                <p class="text-muted mt-3 mb-4">Hozircha reading text yo'q</p>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-1"></i>Birinchi Textni Qo'shish
                </a>
            </div>
        </div>
    }
</div>